<script is:client="load">
const videosContainer = document.getElementById('videos-container');
const videos = document.querySelectorAll('.video-item video');
const dots = document.querySelectorAll('.nav-dot');
const muteBtns = document.querySelectorAll('.mute-btn');
let currentVideoIndex = 0;
let scrollTimeout;

// Loader solo mientras el video carga
videos.forEach((video, idx) => {
    const spinner = video.parentElement.querySelector('.loading-spinner');
    spinner.style.display = 'flex';
    video.addEventListener('loadeddata', function() {
        spinner.style.display = 'none';
        if(idx === 0 && currentVideoIndex === 0 && video.paused) {
            video.play();
        }
    });
    video.addEventListener('waiting', function() {
        spinner.style.display = 'flex';
    });
    video.addEventListener('playing', function() {
        spinner.style.display = 'none';
    });
    video.addEventListener('click', function() {
        if (this.paused) {
            this.play();
        } else {
            this.pause();
        }
    });
});

// Mute/Unmute button logic
muteBtns.forEach((btn, idx) => {
    setMuteIcon(btn, videos[idx].muted);
    btn.addEventListener('click', function(e) {
        e.stopPropagation();
        videos[idx].muted = !videos[idx].muted;
        setMuteIcon(btn, videos[idx].muted);
    });
});

function setMuteIcon(btn, muted) {
    btn.innerHTML = muted
        ? `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon><line x1="23" y1="9" x2="17" y2="15"></line><line x1="17" y1="9" x2="23" y2="15"></line></svg>`
        : `<svg width="28" height="28" viewBox="0 0 24 24" fill="none" stroke="#fff" stroke-width="2.2" stroke-linecap="round" stroke-linejoin="round"><polygon points="11 5 6 9 2 9 2 15 6 15 11 19 11 5"></polygon><path d="M19 12c0-2.21-1.79-4-4-4"></path><path d="M15 8c0-1.1-.9-2-2-2"></path></svg>`;
}

function updateActiveVideo() {
    videos.forEach(video => video.pause());
    if (videos[currentVideoIndex]) {
        videos[currentVideoIndex].play();
    }
    dots.forEach((dot, idx) => {
        dot.classList.toggle('active', idx === currentVideoIndex);
    });
}

function getCurrentIndex() {
    let minDiff = Infinity;
    let idx = 0;
    videos.forEach((video, i) => {
        const rect = video.parentElement.getBoundingClientRect();
        const diff = Math.abs(rect.top + rect.height/2 - window.innerHeight/2);
        if (diff < minDiff) {
            minDiff = diff;
            idx = i;
        }
    });
    return idx;
}

function onScrollOrWheel() {
    clearTimeout(scrollTimeout);
    scrollTimeout = setTimeout(() => {
        const newIndex = getCurrentIndex();
        if (newIndex !== currentVideoIndex) {
            currentVideoIndex = newIndex;
            updateActiveVideo();
        }
    }, 100);
}

videosContainer.addEventListener('scroll', onScrollOrWheel);
videosContainer.addEventListener('wheel', onScrollOrWheel);

// Touch para mÃ³viles
let touchStartY = 0;
videosContainer.addEventListener('touchstart', e => {
    touchStartY = e.touches[0].clientY;
});
videosContainer.addEventListener('touchend', e => {
    const touchEndY = e.changedTouches[0].clientY;
    if (Math.abs(touchStartY - touchEndY) > 50) {
        setTimeout(() => {
            const newIndex = getCurrentIndex();
            if (newIndex !== currentVideoIndex) {
                currentVideoIndex = newIndex;
                updateActiveVideo();
            }
        }, 200);
    }
});

// Inicia el primer video si ya estÃ¡ cargado
if (videos[0] && videos[0].readyState >= 2) {
    videos[0].play();
}
</script>

